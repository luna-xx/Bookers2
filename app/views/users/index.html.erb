<%= render 'layouts/sidebar', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">
  
  
  <h2>Users</h2>
  <table class="table table-striped">
    <thead class="book-head">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image(100,100) %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
              <%= link_to 'Show', "/users/#{user.id}" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>