<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(1000,100) %>
  
  <table>
    <thead class="book-head">
      
      <tr>
        <th>name</th>
        <td><%= @user.name %></td>
      </tr>
      
      <tr>
        <th>introduction</th>
        <td><%= @user.introduction %></td>
      </tr>
      
    </thead>
  </table>
  
  <%= link_to edit_book_path(@user), class: 'btn btn-outline-info btn-sm mt-3 mb-5 w-50' do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  
  <h3>New book</h3>
    <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <% end %>
  
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  
  <%= form_with model: @book, url: books_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <p>
      <%= f.text_field :title, class: 'form-label' %>
    </p>
  </div>
  
  <div class="form-group">
    <%= f.label :body, 'Opinion' %>
    <p>
      <%=f.text_area :body, class: 'form-label' %>
    </p>
  </div>
  
  <%= f.submit 'Create Book', class: 'btn btn-info' %>
  <% end %>
</div>